{
  "expo": {
    "name": "Lyriq",
    "slug": "lyriq-mobile",
    "version": "1.0.0",
    "scheme": "lyriq",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000205"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lyriq.mobile",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Lyriq needs access to your microphone to record audio takes for your songs.",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "package": "com.lyriq.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000205"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "Allow Lyriq to access your microphone to record audio takes."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
