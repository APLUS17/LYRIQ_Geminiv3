{
  "expo": {
    "name": "Lyriq",
    "slug": "lyriq-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000205"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lyriq.mobile",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Lyriq needs access to your microphone to record audio takes for your songs.",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "package": "com.lyriq.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000205"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow Lyriq to access your microphone to record audio takes."
        }
      ]
    ]
  }
}
